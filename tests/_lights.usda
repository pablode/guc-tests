#usda 1.0
(
    defaultPrim = "Lights"
    metersPerUnit = 1
    upAxis = "Y"
)

def Xform "Lights" (
    variants = {
        string domeLightVariant = "studio"
    }
    prepend variantSets = "domeLightVariant"
)
{
    variantSet "domeLightVariant" = {
        "studio" {
            def DomeLight "DomeLight"
            {
                asset inputs:texture:file = @./_cyclorama.hdr@
                float inputs:intensity = 0.5
            }
        }
        "glTFAssetGenerator" {
            def DomeLight "DomeLight"
            {
                asset inputs:texture:file = @./_glTFAssetGenSkybox.png@
                float3 xformOp:rotateXYZ = (0, 90, 0)
                uniform token[] xformOpOrder = ["xformOp:rotateXYZ"]
            }
        }
        "secludedBeach" {
            def DomeLight "DomeLight"
            {
                asset inputs:texture:file = @./_secludedBeach.hdr@
            }
        }
    }
}

